<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category_id %>
    <div class="form-group">
      <%# f.collection_select Product::VARIANTS, :to_s, :size_name %>
      <%= f.fields_for :variants do |v| %>
        <%= v.size_name( select(options_for_select(@variants.collect{|c| [c, c]} )))%>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :variants %>

    </div>


    <div class="form-actions">
      <%= f.submit class: "btn btn-success" %>

    </div>
  </div>
<% end %>
